{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"no-console": "off",
		"indent": [2, "tab"],
		"no-tabs": 0,
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_notes",
					"_service",
					"_validator",
					"_pool",
					"_authenticationsService",
					"_usersService",
					"_tokenManager",
					"_collaborationService",
					"_notesService",
					"_collaborationsService"
				]
			}
		]
	}
}
